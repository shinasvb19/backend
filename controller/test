const cart = await Cart.aggregate([
  { $match: { user_id } },
  { $unwind: "$cart_item" },
  {
    $project: {
      product_id: "$cart_item.product_id",
      itemQuantity: "$cart_item.product_quantity",
      size: "$cart_item.product_size",
    },
  },

  {
    $lookup: {
      from: "products",
      localField: "product_id",
      foreignField: "_id",
      as: "products",
    },
  },
]);
